<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Update Book</title>
</head>
<body>
    <h1>Update Book</h1>
    <form action="/update/<%= book.id %>" method="POST">
        <label>Title:</label>
        <input type="text" name="title" value="<%= book.title %>" required><br><br>
        <label>Author:</label>
        <input type="text" name="author" value="<%= book.author %>" required><br><br>
        <label>Genre:</label>
        <select name="genreId" required>
            <% genres.forEach(genre => { %>
                <option value="<%= genre.id %>" <%= genre.id === book.genreId ? "selected" : "" %> >
                    <%= genre.name %>
                </option>
            <% }) %>
        </select><br><br>
        <label>Description:</label>
        <textarea name="description"><%= book.description %></textarea><br><br>
        <button type="submit">Update Book</button>
    </form>

    <p><a href="/">Back to books list</a></p>
</body>
</html>
